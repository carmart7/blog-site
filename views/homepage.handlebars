{{#each blogs as |blog|}}
<a href="/blog/{{id}}">
<div class="card text-center m-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>{{title}}</h2>
    <h3>Posted by {{user.username}} on {{format_date createdAt}}</h3>
  </div>
  <div class="card-body">
    <p class="text-start">{{text}}</p>
  </div>
</div>
</a>
{{/each}}